
@model MuellerThomasMKN_151.Models.Game
@{
    ViewBag.Title = "Hangman";
}

<h3>Aktuelle Fehler: @Model.currentErrors</h3>
<h3>Maximale Fehler: @Model.maxErrors</h3>




<div id="gamedisplaycontainer">
    <div id="hangmanpic">
        <img src="~/Images/hangman_@(Model.currentErrors.ToString()).png" />
    </div>
    @if (Model.state != MuellerThomasMKN_151.Models.Game.eGameState.ACTIVE)
    {
        <div id="result">
            @if (Model.state == MuellerThomasMKN_151.Models.Game.eGameState.WON)
            {
                <p>Glückwunsch du hast gewonnen.</p>
            }
            else if (Model.state == MuellerThomasMKN_151.Models.Game.eGameState.LOST)
            {
                <p>Leider Verloren.</p>
                <p>Das korrekte Wort wäre "@Model.completeWord".</p>
            }
            <a class="btn btn-default" href=@Url.Action("Index", "Game")>Erneut Spielen</a>
        </div>
    }
</div>

<h3>@Model.showWord</h3>

