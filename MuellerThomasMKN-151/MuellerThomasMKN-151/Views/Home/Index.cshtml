@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>


@using Microsoft.AspNet.Identity
@if (!Request.IsAuthenticated)
{
// nicht eingeloggt
    <div class="row">
        <div class="col-md-3">
            <p><a class="btn btn-default" href=@Url.Action("Register", "Account")>Registrieren</a></p>
        </div>
        <div class="col-md-3">
            <p><a class="btn btn-default" href=@Url.Action("Login", "Account")>Anmelden</a></p>
        </div>
        <div class="col-md-3">
            <p><a class="btn btn-default" href=@Url.Action("Index", "Game")>Ohne Anmeldung</a></p>
        </div>
    </div>
}
else
{
    // eingeloggt
    <div class"gamestart">
        <p><a class="btn btn-default" href=@Url.Action("Index", "Game")>Spiel starten</a></p>
    </div>
}